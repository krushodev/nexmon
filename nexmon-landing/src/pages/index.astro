---
import Layout from '../layouts/Layout.astro';
---

<Layout title="NEXMON | Lightweight System Monitor">
  {/* NAVBAR */}
  <nav class="border-b border-[#30363d] bg-[#0d1117]/90 backdrop-blur-md sticky top-0 z-50">
    <div class="max-w-6xl mx-auto px-6 h-14 flex items-center justify-between">
      <div class="flex items-center gap-2 font-semibold text-lg tracking-tight">
        <img src="/logo-white.png" alt="NEXMON" class="h-8 w-auto" />
      </div>
      <div class="flex items-center gap-6">
        <a href="#features" class="text-sm text-[#8b949e] hover:text-white transition-colors">Features</a>
        <a href="#download" class="text-sm text-[#8b949e] hover:text-white transition-colors">Download</a>
        <a href="https://github.com/krushodev/nexmon" target="_blank" class="text-sm text-[#8b949e] hover:text-white transition-colors">GitHub</a>
      </div>
    </div>
  </nav>

  <main>
    {/* HERO SECTION */}
    <section class="pt-28 pb-16 px-6 text-center max-w-4xl mx-auto">
      <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-[#161b22] border border-[#30363d] text-[#8b949e] text-xs font-medium mb-8">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
        </span>
        Version 1.0.0 Available
      </div>

      <h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-6 text-white">
        System monitoring,<br />
        <span class="text-[#8b949e]">simplified.</span>
      </h1>

      <p class="text-xl text-[#8b949e] mb-12 max-w-2xl mx-auto leading-relaxed">
        A lightweight, fast, and beautiful system monitor built with
        <span class="text-[#f0f6fc] font-medium">Rust</span> and
        <span class="text-[#f0f6fc] font-medium">Tauri</span>. Zero overhead, real-time performance.
      </p>

      <div id="download" class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="/nexmon_1.0.0_x64_en-US.msi"
          class="h-12 px-8 rounded-lg bg-white hover:bg-[#f0f6fc] text-[#0d1117] font-semibold flex items-center gap-2 transition-all hover:scale-105 active:scale-95"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" x2="12" y1="15" y2="3"></line>
          </svg>
          Download for Windows
        </a>
        <span class="text-sm text-[#8b949e]">macOS & Linux coming soon</span>
      </div>
    </section>

    {/* APP PREVIEW */}
    <section class="px-6 pb-24">
      <div class="max-w-5xl mx-auto rounded-2xl border border-[#30363d] bg-[#0d1117] shadow-2xl overflow-hidden">
        {/* Window Header */}
        <div class="h-12 border-b border-[#30363d] flex items-center px-4 bg-[#161b22]">
          <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-[#30363d]"></div>
            <div class="w-3 h-3 rounded-full bg-[#30363d]"></div>
            <div class="w-3 h-3 rounded-full bg-[#30363d]"></div>
          </div>
          <div class="flex-1 flex items-center justify-center gap-4">
            <div class="flex items-center gap-2 px-3 py-1 rounded-lg bg-white/5 text-white text-xs font-medium">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect width="7" height="9" x="3" y="3" rx="1"></rect>
                <rect width="7" height="5" x="14" y="3" rx="1"></rect>
                <rect width="7" height="9" x="14" y="12" rx="1"></rect>
                <rect width="7" height="5" x="3" y="16" rx="1"></rect>
              </svg>
              Dashboard
            </div>
            <div class="text-[#8b949e] text-xs">Resources</div>
            <div class="text-[#8b949e] text-xs">Processes</div>
          </div>
        </div>

        {/* App Content Mockup */}
        <div class="p-8 bg-[#161b22]">
          {/* Welcome Card */}
          <div class="bg-[#0d1117] rounded-2xl border border-[#30363d] p-6 mb-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4">
                <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-white to-[#8b949e] flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#0d1117" stroke-width="2">
                    <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                  </svg>
                </div>
                <div>
                  <h2 class="text-xl font-semibold text-white">Welcome, User</h2>
                  <p class="text-sm text-[#8b949e]">DESKTOP-PC â€¢ Windows</p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-3xl font-light text-white">10:30</p>
                <p class="text-xs text-[#8b949e]">Wednesday, January 22</p>
              </div>
            </div>
          </div>

          {/* Stats Grid */}
          <div class="grid grid-cols-2 gap-6">
            {/* CPU Card */}
            <div class="bg-[#0d1117] rounded-2xl border border-[#30363d] p-6">
              <div class="flex items-center justify-between mb-6">
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                    <rect width="16" height="16" x="4" y="4" rx="2"></rect>
                    <rect width="6" height="6" x="9" y="9" rx="1"></rect>
                    <path d="M15 2v2"></path>
                    <path d="M15 20v2"></path>
                    <path d="M2 15h2"></path>
                    <path d="M2 9h2"></path>
                    <path d="M20 15h2"></path>
                    <path d="M20 9h2"></path>
                    <path d="M9 2v2"></path>
                    <path d="M9 20v2"></path>
                  </svg>
                  <span class="font-medium text-white">Processor</span>
                </div>
                <span class="text-xs text-[#8b949e] uppercase tracking-wider">CPU</span>
              </div>
              <div class="flex items-center justify-center">
                <div class="relative w-28 h-28">
                  <svg class="w-28 h-28 transform -rotate-90">
                    <circle cx="56" cy="56" r="48" fill="none" stroke="#30363d" stroke-width="8"></circle>
                    <circle cx="56" cy="56" r="48" fill="none" stroke="white" stroke-width="8" stroke-dasharray="301.6" stroke-dashoffset="241" stroke-linecap="round"></circle>
                  </svg>
                  <div class="absolute inset-0 flex flex-col items-center justify-center">
                    <span class="text-3xl font-bold text-white">20</span>
                    <span class="text-xs text-[#8b949e]">%</span>
                  </div>
                </div>
              </div>
              <div class="mt-6 pt-4 border-t border-[#30363d] flex justify-between text-sm">
                <span class="text-[#8b949e]">Status</span>
                <span class="text-green-400 font-medium">Normal</span>
              </div>
            </div>

            {/* Memory Card */}
            <div class="bg-[#0d1117] rounded-2xl border border-[#30363d] p-6">
              <div class="flex items-center justify-between mb-6">
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#c9d1d9" stroke-width="2">
                    <path d="M6 19v-3"></path>
                    <path d="M10 19v-3"></path>
                    <path d="M14 19v-3"></path>
                    <path d="M18 19v-3"></path>
                    <path d="M8 11V9"></path>
                    <path d="M16 11V9"></path>
                    <path d="M12 11V9"></path>
                    <path d="M2 15h20"></path>
                    <path d="M2 7a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v1.1a2 2 0 0 0 0 3.837V17a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2v-5.1a2 2 0 0 0 0-3.837Z"></path>
                  </svg>
                  <span class="font-medium text-white">Memory</span>
                </div>
                <span class="text-xs text-[#8b949e] uppercase tracking-wider">RAM</span>
              </div>
              <div class="flex items-center justify-center">
                <div class="relative w-28 h-28">
                  <svg class="w-28 h-28 transform -rotate-90">
                    <circle cx="56" cy="56" r="48" fill="none" stroke="#30363d" stroke-width="8"></circle>
                    <circle cx="56" cy="56" r="48" fill="none" stroke="#c9d1d9" stroke-width="8" stroke-dasharray="301.6" stroke-dashoffset="181" stroke-linecap="round"></circle>
                  </svg>
                  <div class="absolute inset-0 flex flex-col items-center justify-center">
                    <span class="text-3xl font-bold text-white">40</span>
                    <span class="text-xs text-[#8b949e]">%</span>
                  </div>
                </div>
              </div>
              <div class="mt-6 pt-4 border-t border-[#30363d] flex justify-between text-sm">
                <span class="text-[#8b949e]">Used / Total</span>
                <span class="text-white font-medium">12.8 GB / 32 GB</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* FEATURES SECTION */}
    <section id="features" class="px-6 py-24 border-t border-[#30363d]">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-white mb-4">Built for performance</h2>
        <p class="text-center text-[#8b949e] mb-16 max-w-2xl mx-auto">Every aspect of Nexmon is designed to be fast, efficient, and beautiful.</p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="p-6 rounded-2xl bg-[#161b22] border border-[#30363d]">
            <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                <path d="m8 3 4 8 5-5 5 15H2L8 3z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Zero Overhead</h3>
            <p class="text-[#8b949e] text-sm leading-relaxed">Built with Rust for maximum performance. Uses minimal system resources while providing real-time monitoring.</p>
          </div>

          <div class="p-6 rounded-2xl bg-[#161b22] border border-[#30363d]">
            <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"></path>
                <path d="M2 12h20"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Cross-Platform</h3>
            <p class="text-[#8b949e] text-sm leading-relaxed">Powered by Tauri framework. One codebase for Windows, macOS, and Linux with native performance.</p>
          </div>

          <div class="p-6 rounded-2xl bg-[#161b22] border border-[#30363d]">
            <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Dark & Light Mode</h3>
            <p class="text-[#8b949e] text-sm leading-relaxed">Beautiful minimalist design with support for both dark and light themes. Easy on your eyes, day or night.</p>
          </div>
        </div>
      </div>
    </section>

    {/* CTA SECTION */}
    <section class="px-6 py-24 border-t border-[#30363d]">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-white mb-4">Ready to try Nexmon?</h2>
        <p class="text-[#8b949e] mb-8">Download now and experience system monitoring the way it should be.</p>
        <a
          href="/nexmon_1.0.0_x64_en-US.msi"
          class="inline-flex h-12 px-8 rounded-lg bg-white hover:bg-[#f0f6fc] text-[#0d1117] font-semibold items-center gap-2 transition-all hover:scale-105 active:scale-95"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" x2="12" y1="15" y2="3"></line>
          </svg>
          Download for Windows
        </a>
      </div>
    </section>

    {/* FOOTER */}
    <footer class="border-t border-[#30363d] py-12">
      <div class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="flex items-center gap-2">
          <img src="/logo-white.png" alt="NEXMON" class="h-6 w-auto" />
        </div>
        <p class="text-sm text-[#8b949e]">&copy; 2025 Nexmon Project. Open Source Software.</p>
        <div class="flex items-center gap-4">
          <a href="https://github.com/krushodev/nexmon" target="_blank" class="text-[#8b949e] hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </footer>
  </main>
</Layout>
